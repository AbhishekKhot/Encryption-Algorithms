<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.DesAlgorithmFragment"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enter Message here"
            android:layout_margin="15dp"
            android:textColor="@color/black"
            android:gravity="center"
            android:textSize="15sp"
            android:textStyle="bold"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/inputTextDES"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="13dp"
                android:layout_marginBottom="13dp"
                android:hint="Type your message here"
                android:minHeight="48dp" />

            <ImageButton
                android:id="@+id/getSpeechInputDES"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_keyboard_voice_24"
                tools:ignore="SpeakableTextPresentCheck" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Encrypt message"
                android:id="@+id/encryptDES"
                android:textColor="@color/green"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Decrypt message"
                android:id="@+id/decryptDES"
                android:textColor="@color/green"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Send message"
                android:id="@+id/buttonSendDES"
                android:textColor="@color/green"
                android:backgroundTint="@color/black"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="15dp"
                android:text="Clear message"
                android:textColor="@color/green"
                android:backgroundTint="@color/black"
                android:id="@+id/buttonClearDES"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Output Message"
            android:layout_margin="15dp"
            android:textStyle="bold"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/outputTextDES"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="13dp"
            android:layout_marginRight="13dp"
            android:layout_marginBottom="13dp"
            android:background="@color/grey"
            android:textColor="@color/black"
            android:minHeight="48dp"
            android:textIsSelectable="true"
            tools:ignore="SpeakableTextPresentCheck" />

    </LinearLayout>
</ScrollView>